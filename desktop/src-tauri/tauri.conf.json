{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aniways",
  "version": "0.1.0",
  "identifier": "xyz.aniways.desktop",
  "build": {
    "devUrl": "https://aniways.xyz"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "aniways",
        "minWidth": 1024,
        "minHeight": 768,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
