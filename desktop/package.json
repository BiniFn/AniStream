{
  "name": "aniways",
  "productName": "Aniways",
  "version": "1.0.5",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production tsup",
    "start": "bun run build && electron .",
    "dev": "NODE_ENV=development tsup --watch --onSuccess \"electron .\"",
    "dist": "bun run build && electron-builder",
    "dist:mac": "bun run build && electron-builder --mac",
    "dist:win": "bun run build && electron-builder --win",
    "dist:linux": "bun run build && electron-builder --linux"
  },
  "build": {
    "appId": "xyz.aniways.desktop",
    "productName": "Aniways",
    "files": [
      "dist/**/*"
    ],
    "asar": true,
    "asarUnpack": [],
    "compression": "maximum",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        "dir"
      ],
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Video"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
